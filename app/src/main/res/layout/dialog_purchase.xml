<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:cardElevation="0dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:src="@drawable/banner_subscription">


        </ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/purchasedTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nexabold"
                    android:gravity="center"
                    android:text="SUBSCRIPTION $3.99/Month \n With 30 Days Free Trial"
                    android:textSize="@dimen/_15ssp" />

                <TextView
                    android:id="@+id/purchasedDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/nexalight"
                    android:gravity="center"
                    android:text="@string/policy_subscription"
                    android:textSize="@dimen/_12ssp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvSubscribe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00FFFF"
                android:fontFamily="@font/nexabold"
                android:gravity="center"
                android:padding="@dimen/_5sdp"
                android:text="SUBSCRIBE"
                android:textColor="@color/white"
                android:textSize="@dimen/_15ssp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@android:color/darker_gray" />

            <TextView
                android:id="@+id/tvPolicy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nexalight"
                android:gravity="center"
                android:padding="@dimen/_5sdp"
                android:text="Privacy Policy"
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="@dimen/_13ssp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@android:color/darker_gray" />

            <TextView
                android:id="@+id/tvTermsUse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nexalight"
                android:gravity="center"
                android:padding="@dimen/_5sdp"
                android:text="Terms of Service"
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="@dimen/_13ssp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@android:color/darker_gray" />

            <TextView
                android:id="@+id/tvClose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nexalight"
                android:gravity="center"
                android:padding="@dimen/_5sdp"
                android:text="Close"
                android:textSize="@dimen/_13ssp" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>