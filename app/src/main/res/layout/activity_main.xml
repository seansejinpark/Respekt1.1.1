<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activites.MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.respekt.utils.VideoView
            android:id="@+id/videoView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/frame_container"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

            </FrameLayout>


            <LinearLayout
                android:paddingTop="@dimen/_10sdp"
                android:background="@drawable/bottom_layout"
                android:paddingBottom="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageButton
                        android:layout_width="@dimen/_40sdp"
                        android:id="@+id/btnHome"
                        android:layout_height="@dimen/_40sdp"
                        android:background="@drawable/ic_bottom_home"
                        android:alpha="0.75"/>

                    <TextView
                        android:layout_marginTop="@dimen/_5sdp"
                        android:fontFamily="@font/nexabold"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="HOME"
                        android:textSize="@dimen/_8ssp"
                        android:textColor="@color/white"
                        android:alpha="0.75"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:id="@+id/layoutMe"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/btnMe"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:background="@drawable/ic_bottom_me"
                        android:alpha="0.75"/>

                    <TextView
                        android:fontFamily="@font/nexabold"
                        android:layout_marginTop="@dimen/_5sdp"

                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ME"
                        android:textSize="@dimen/_8ssp"
                        android:textColor="@color/white"
                        android:alpha="0.75"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageButton
                        android:layout_width="@dimen/_40sdp"
                        android:id="@+id/btnBeautification"
                        android:layout_height="@dimen/_40sdp"
                        android:background="@drawable/ic_bottom_beutitaion"
                        android:alpha="0.75"/>

                    <TextView
                        android:fontFamily="@font/nexabold"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BEAUTY"
                        android:textSize="@dimen/_8ssp"
                        android:textColor="@color/white"
                        android:alpha="0.75"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageButton
                        android:layout_width="@dimen/_40sdp"
                        android:id="@+id/btnMusic"
                        android:layout_height="@dimen/_40sdp"
                        android:background="@drawable/ic_bottom_music"
                        android:alpha="0.75"/>

                    <TextView
                        android:fontFamily="@font/nexabold"
                        android:layout_marginTop="@dimen/_5sdp"

                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MUSIC"
                        android:textSize="@dimen/_8ssp"

                        android:textColor="@color/white"
                        android:alpha="0.75"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageButton
                        android:layout_width="@dimen/_40sdp"
                        android:id="@+id/btnShortBreak"
                        android:layout_height="@dimen/_40sdp"
                        android:background="@drawable/ic_bottom_short_break"
                        android:alpha="0.75"/>

                    <TextView
                        android:fontFamily="@font/nexabold"
                        android:layout_marginTop="@dimen/_5sdp"

                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_8ssp"
                        android:text="SHORT BREAK"
                        android:textColor="@color/white"
                        android:alpha="0.75"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageButton
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:id="@+id/btnSound"
                        android:background="@drawable/ic_bottom_sound"
                        android:alpha="0.75"/>

                    <TextView
                        android:fontFamily="@font/nexabold"
                        android:layout_marginTop="@dimen/_5sdp"

                        android:layout_gravity="center"
                        android:textSize="@dimen/_8ssp"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="SOUND"
                        android:textColor="@color/white"
                        android:alpha="0.75"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>